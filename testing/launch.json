    "version": "0.2.0",
    "configurations": [
        {
            "name": "actor grad test",
            "type": "debugpy",
            "request": "launch",
            "program": "testing/testing_actor_grad.py",
            "console": "integratedTerminal"
        },
        {
            "name": "critic grad test",
            "type": "debugpy",
            "request": "launch",
            "program": "testing/testing_critic_grad.py",
            "console": "integratedTerminal"
        },
        {
            "name": "RL tests",
            "type": "debugpy",
            "request": "launch",
            "program": "testing_RL.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/testing"
        },
        {
            "name": "learn and update RL test",
            "type": "debugpy",
            "request": "launch",
            "program": "-m",
            "console": "integratedTerminal",
            "args": [
                "unittest",
                "testing_RL.TestRLAC.test_learn_and_update"
            ],
            "cwd": "${workspaceFolder}/testing"
        },        
        {
            "name": "main w/ command line args",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "--system-id=double_integrator",
                "--seed=0",
                "--nb-cpus=15",
                "--w-S=1e-2",
                "--test-n=69"
            ]
        }
    ]
